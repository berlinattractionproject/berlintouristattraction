<h1 class="centerheader">Create an account</h1>


<form class="authform" action="/auth/signup" method="post">
       {{#if errorMessage}}
            <p class="error">{{errorMessage}}</p>
        {{/if}}
        <div class="wrapper">
 
                <label>Username
                    <input type="text" name="username" placeholder="Enter your username..." maxlength="20" required>
                </label>
                <br>
                    <label>Email
                        <input type="email" name="email" placeholder="Enter your email..." maxlength="20" required>
                    </label>
                <br>
                    <label>Password
                        <input type="password" name="password" placeholder="Enter your password..." maxlength="20" required>
                    </label>
            <div>
                <button class="buttonAuth" type="submit">Sign Up</button>
            </div>
        </div>
</form>


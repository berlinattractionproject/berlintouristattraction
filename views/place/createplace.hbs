<h1>I know a place </h1>

<form class="createform" action="/place/create" method="post">

<div class="placewrapper">
    <label>Name of the Place
      <input type="text" name="name" placeholder="What's the name?">
    </label>

    <label>Address
      <input type="text" name="address" placeholder="Where it is located?">
    </label>

    <label>ZIP-Code
      <input type="number" name="zipCode" placeholder="What's the zip-code?">
    </label>

    <label>Category
      <input list="category" name="category" placeholder="Choose a category">
    </label>

    
      <label>Description
      <textarea name="description" cols="30" rows="10">Description</textarea>
    </label>
    


    <div class="addplace">
      <button type="submit">Add Place</button>
    </div>



  <datalist id="category">
    {{#each allCategories}}
    <option value="{{this}}">
    {{/each}}
  </datalist>
</div>
</form>
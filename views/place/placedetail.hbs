<h1 class="centerheader">Edit this Place</h1>

{{!-- if the user is logged in, show: --}}
{{#if username}}
      <form class="createform" action="/place/edit/{{id}}">
        <div class="placewrapper">
          <label>Name of the Place
            <input type="text" name="name" value="{{name}}" required>
          </label>

          <label>Address
            <input type="text" name="address" value="{{address}}" required>
          </label>

          <label>ZIP-Code
            <input type="number" name="zipCode" value="{{zipCode}}" required>
          </label>
          <label>Category
            <input type="string" name="category" value="{{category}}" required>
          </label>
          <label>
              <textarea name="description" cols="30" rows="10" required>{{description}}</textarea>
            </label>
            <div class="addplace">
              <button  type="submit">Save changes</button>
            </div>
        </form>

        <form action="/place/delete/{{id}}" method="post">
        <div class="deleteplace">
          <button type="submit">Delete</button>
        </div>
      </div>
      </form>
{{/if}}
